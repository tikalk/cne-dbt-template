{
  "rules": {
    "header-max-length": [
      2,
      "always",
      72
    ],
    "body-leading-blank": [
      2,
      "always"
    ],
    "type-empty": [
      2,
      "never"
    ],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "chore",
        "refactor",
        "test",
        "revert"
      ]
    ],
    "scope-empty": [
      2,
      "never"
    ],
    "scope-enum": [
      2,
      "always",
      [
        "dbt",
        "deps",
        "tests",
        "infra",
        "common",
        "dagster",
        "snowflake",
        "bigquery"
      ]
    ]
  }
}
