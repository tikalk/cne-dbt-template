    "version": "0.2.0",
    "configurations": [    
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }            
        },
        {
            "name": "Python: CLI data-applications",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cli/dbt_cli.py",
            "args": [
                "start"
            ],
            "justMyCode" : false,
            "console": "integratedTerminal",
            "env": { "PYTHONPATH": "${workspaceRoot}" }
        }

        {
            "name": "Python: CLI data-applications MCP",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cli/dbt_cli.py mcp",
            "args": [
                "start"
            ],
            "justMyCode" : false,
            "console": "integratedTerminal",
            "env": { "PYTHONPATH": "${workspaceRoot}" }
        }

    ]
}
